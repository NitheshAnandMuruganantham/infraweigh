{
  "name": "infraweigh",
  "version": "1.0.0",
  "license": "MIT",
  "private": "true",
  "dependencies": {
    "concurrently": "^7.2.1",
    "firebase": "^9.8.3",
    "firebase-tools": "^11.0.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": "https://github.com/mentorSqr/infraweigh.git",
  "author": "nithesh  anand <anand252825@gmail.com>",
  "scripts": {
    "prepare": "husky install",
    "dev": "concurrently \"yarn dev:kiosk\" \"yarn dev:terminal\" \"yarn dev:firebase\" \"yarn start:localpolyfils\" \"yarn dev:hasura\"",
    "build": "cd packages/terminal && yarn build",
    "dev:terminal": "yarn workspace terminal dev",
    "dev:firebase": "concurrently \"yarn workspace serverless serve\" \"yarn firebase:watch\" ",
    "firebase:watch": "yarn workspace serverless build:watch",
    "start:localpolyfils": "yarn workspace local-polyfils start",
    "dev:hasura": "yarn workspace hasura-graphql-server dev",
    "dev:kiosk": "yarn workspace kiosk start",
    "watch:server": "yarn workspace server watch",
    "dev:server": "yarn workspace server dev"
  },
  "devDependencies": {
    "husky": "^8.0.1"
  }
}
